<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity.change_pass.view.ChangePassActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_img"
    android:scaleType="centerCrop"
    android:src="@drawable/back_img_top_lay" />


<LinearLayout
    android:layout_centerVertical="true"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/logo" />
    <TextView
        android:textColor="@color/colorGreen"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing=".10"
        android:lineSpacingMultiplier="1.15"
        android:textAlignment="center"
        android:text="CHANGE PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:paddingRight="10dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_pass"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:hint="New Password"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_input"/>

    <EditText
        android:paddingRight="10dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_pass"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:hint="Confirm Password"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_input"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_rec_bottom_green_10dp_solod"
        android:letterSpacing=".10"
        android:lineSpacingMultiplier="1.15"
        android:paddingLeft="32dp"
        android:paddingTop="5dp"
        android:paddingRight="32dp"
        android:paddingBottom="5dp"
        android:text="SUBMIT"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:text="I have no Account  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorGreen"
            android:textSize="14sp"
            android:text="REGISTRATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>

</RelativeLayout>