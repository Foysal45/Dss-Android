<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.fg_profileInfo.view.FragmentPersonalInfo">
    <RelativeLayout
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@id/top_ber"
        android:layout_width="match_parent"
        android:background="@color/colorLowGreen"
        android:layout_height="40dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/menu_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_navigate_before_24" />
        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            android:layout_toRightOf="@id/menu_back"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:text="Honours and Award"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/menu_next"
            android:gravity="center"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/menu_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_navigate_next_24" />
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_id"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>