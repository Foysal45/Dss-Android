<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ac_profile.view.ProfileActivity">
    <ImageView
        android:background="@drawable/back_img"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/top_ber"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/colorGreen"
    android:layout_height="60dp">
    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_arrow_white_24" />
        <TextView
            android:id="@+id/menu_title"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            tools:text="Permanent Address"
            android:textSize="24sp"
            android:gravity="center_vertical"
            />
</LinearLayout>
    <RelativeLayout
        android:id="@+id/topic_lay"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@id/top_ber"
        android:layout_width="match_parent"
        android:background="@color/colorLowGreen"
        android:layout_height="40dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/menu_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_navigate_before_24" />
        <TextView
            android:id="@+id/menu_topic"
            android:textStyle="bold"
            android:layout_toRightOf="@id/menu_back"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:text="Honours and Award"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/menu_next"
            android:gravity="center"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/menu_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_navigate_next_24" />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:clipToPadding="false"
        android:id="@+id/viewpager_go"
        android:layout_below="@id/topic_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"/>



</RelativeLayout>