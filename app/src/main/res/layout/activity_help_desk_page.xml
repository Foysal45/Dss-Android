<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.HelpDeskPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_baseline_arrow_back_24"

                    android:backgroundTint="@color/black" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_toEndOf="@+id/backBtn"
                    android:text="@string/help_desk" />

            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="@dimen/_3sdp"
            android:text="@string/director_general"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <include
            android:id="@+id/fName"
            layout="@layout/personel_information_view_field_with_right_icon"
            app:title="@{@string/namee}" />


       <include
           android:id="@+id/fdesignnation"
           layout="@layout/personel_information_view_field_with_right_icon"
           app:title="@{@string/designation}" />

       <include
           android:id="@+id/fdepartment"
           layout="@layout/personel_information_view_field_with_right_icon"
           app:title="@{@string/designation}" />

       <include
           android:id="@+id/femail"
           layout="@layout/personel_information_view_field_with_right_icon"
           app:title="@{@string/designation}" />

       <include
           android:id="@+id/fphone"
           layout="@layout/personel_information_view_field_with_right_icon"
           app:title="@{@string/designation}" />

       <include
           android:id="@+id/fmobile"
           layout="@layout/personel_information_view_field_with_right_icon"
           app:title="@{@string/designation}" />

       <include
           android:id="@+id/ffax"
           layout="@layout/personel_information_view_field_with_right_icon"
           app:title="@{@string/designation}" />

   </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="@dimen/_3sdp"
            android:text="@string/office_address"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:background="@drawable/shape_rectangale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:text="@string/dss_bangla"
            android:textSize="16sp" />

        <include
            android:id="@+id/fAddress"
            layout="@layout/personel_information_view_field_with_right_icon" />

        <include
            android:id="@+id/fpobx"
            layout="@layout/personel_information_view_field_with_right_icon" />

        <include
            android:id="@+id/fFax"
            layout="@layout/personel_information_view_field_with_right_icon" />

        <include
            android:id="@+id/fEmail"
            layout="@layout/personel_information_view_field_with_right_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="@dimen/_3sdp"
            android:text="@string/privacy_other"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:id="@+id/privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:background="@drawable/ic_baseline_info_24"
                android:backgroundTint="@color/green" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:text="@string/privacy_policy"
                android:textColor="@color/light_black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:background="@drawable/ic_baseline_article_24"
                android:backgroundTint="@color/green" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:text="@string/terms"
                android:textColor="@color/light_black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>