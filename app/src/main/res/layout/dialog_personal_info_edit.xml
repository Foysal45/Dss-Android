<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="employee"
            type="com.dss.hrms.model.employeeProfile.Employee" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <!-- ....................................basic info............................................... -->
                <LinearLayout
                    android:id="@+id/llBasicInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                  >

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginTop="15dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/hBasicInformation"
                                layout="@layout/personal_information_create_field_header"

                                app:title="@{@string/personal_information}" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/off_white"
                                android:orientation="vertical"
                                android:paddingHorizontal="@dimen/personal_information_body_padding_horizontal"
                                android:paddingVertical="@dimen/personal_information_body_padding_vertical">

                                <include
                                    android:id="@+id/fProfileId"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/profile_id}"
                                    app:title="@{@string/profile_id}" />

                                <include
                                    android:id="@+id/fNameEng"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/name}"
                                    app:title="@{@string/name}" />

                                <include
                                    android:id="@+id/fNameBangla"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/name_b}"
                                    app:title="@{@string/name_b}" />

                                <include
                                    android:id="@+id/fDOB"
                                    layout="@layout/personal_info_textview"
                                    app:title="@{@string/birth}" />

                                <include
                                    android:id="@+id/fGender"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/gender}" />

                                <include
                                    android:id="@+id/fMaritalStatus"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/marital_status}" />

                                <include
                                    android:id="@+id/fReligion"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/religion}" />

                                <include
                                    android:id="@+id/fBloodGroup"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/blood_group}" />


                                <include
                                    android:id="@+id/fPresentBasicSalary"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/present_basic_salary}"
                                    app:title="@{@string/present_basic_salary}" />

                                <include
                                    android:id="@+id/fPresentGrossSalary"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/present_gross_salary}"
                                    app:title="@{@string/present_gross_salary}" />

                                <include
                                    android:id="@+id/fNid"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/nid_no}"
                                    app:title="@{@string/nid_no}" />

                                <include
                                    android:id="@+id/fTIN"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/tin_no}"
                                    app:title="@{@string/tin_no}" />

                                <include
                                    android:id="@+id/fPunchId"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/punch_id}"
                                    app:title="@{@string/punch_id}" />

                                <include
                                    android:id="@+id/fFatherNameEng"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/f_name}"
                                    app:title="@{@string/f_name}" />

                                <include
                                    android:id="@+id/fFatherNameBangla"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/f_name_b}"
                                    app:title="@{@string/f_name_b}" />

                                <include
                                    android:id="@+id/fMotherNameEng"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/m_name}"
                                    app:title="@{@string/m_name}" />


                                <include
                                    android:id="@+id/fMotherNameBangla"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/m_name_b}"
                                    app:title="@{@string/m_name_b}" />

                                <include
                                    android:id="@+id/fEmail"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/email}"
                                    app:title="@{@string/email}" />

                                <include
                                    android:id="@+id/fUserName"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/user_name}"
                                    app:title="@{@string/user_name}" />

                                <include
                                    android:id="@+id/fPhone"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/phone}"
                                    app:title="@{@string/phone}" />



                                <include
                                    android:id="@+id/fHomeDistrict"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/home_district}" />

                                <include
                                    android:id="@+id/fEmployeeType"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/employee_type}" />


                                <include
                                    android:id="@+id/fEmploymentStatusType"
                                    layout="@layout/personal_info_spinner"
                                    android:visibility="gone"
                                    app:title="@{@string/employee_status_type}" />

                                <include
                                    android:id="@+id/fEmploymentStatusDate"
                                    layout="@layout/personal_info_textview"
                                    android:visibility="gone"
                                    app:title="@{@string/employee_status_date}" />

                                <include
                                    android:id="@+id/fJobJoiningDate"
                                    layout="@layout/personal_info_textview"
                                    app:title="@{@string/employment_job_joining_date}" />
                                <include
                                    android:id="@+id/fPRLDate"
                                    layout="@layout/personal_info_textview"
                                    app:title="@{@string/prl_date}" />
                                <include
                                    android:id="@+id/fPension_date"
                                    layout="@layout/personal_info_textview"
                                    app:title="@{@string/pension_date}" />

                                <include
                                    android:id="@+id/fJobType"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/job_type}" />
                                <include
                                       android:id="@+id/fDateTransferTemporaryRevenue"
                                       layout="@layout/personal_info_spinner"
                                       app:title="@{@string/dateof_transfer_in_temporary_revenue}" />

                                <LinearLayout
                                    android:id="@+id/fTemporaryRevenueAttachment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone"
                                    >
                                    <include
                                        android:id="@+id/fDateOfTransferTemporaryRevenueDate"
                                        layout="@layout/personal_info_textview"
                                        app:title="@{@string/dateof_transfer_in_temporary_revenue}" />

                                    <LinearLayout
                                        android:id="@+id/llTemporaryRevenueAttachment"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >

                                        <TextView
                                            android:id="@+id/tvTemporaryRevenueAttachment"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginVertical="@dimen/_5sdp"
                                            android:drawableLeft="@drawable/ic_baseline_attachment_24"
                                            android:drawablePadding="20dp"
                                            android:text="@string/attachment"
                                            android:maxLines="2"
                                            android:ellipsize="end"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/text_size_large"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:id="@+id/tvllTemporaryRevenueAttachmentFileName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginVertical="@dimen/_5sdp"
                                            android:ellipsize="end"
                                            android:paddingHorizontal="5dp"
                                            android:singleLine="true"
                                            android:text=""
                                            android:textColor="@color/light_black"
                                            android:textSize="@dimen/text_size_medium"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvTemporaryRevenueAttachmentError"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center|left"
                                            android:gravity="center|left"
                                            android:paddingHorizontal="@dimen/_5sdp"
                                            android:paddingVertical="5dp"
                                            android:text="error"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/text_size_small"
                                            android:visibility="gone" />
                                    </LinearLayout>
                                </LinearLayout>
                                    <include
                                        android:id="@+id/fNotConfirmYet"
                                        layout="@layout/personal_info_spinner"
                                        app:title="@{@string/not_confirm_yet}" />

                                <LinearLayout
                                    android:id="@+id/fNotConfirmYetAttachment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone"
                                    >
                                    <include
                                        android:id="@+id/fPermanentConfirmationDate"
                                        layout="@layout/personal_info_textview"
                                        app:title="@{@string/permanent_confirmation_date}" />

                                    <LinearLayout
                                        android:id="@+id/llPermanentConfirmationAttachment"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                       >

                                        <TextView
                                            android:id="@+id/tvPermanentAttachment"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginVertical="@dimen/_5sdp"
                                            android:drawableLeft="@drawable/ic_baseline_attachment_24"
                                            android:drawablePadding="20dp"
                                            android:text="@string/attachment"
                                            android:maxLines="2"
                                            android:ellipsize="end"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/text_size_large"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:id="@+id/tvllPermanentAttachmentFileName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginVertical="@dimen/_5sdp"
                                            android:ellipsize="end"
                                            android:paddingHorizontal="5dp"
                                            android:singleLine="true"
                                            android:text=""
                                            android:textColor="@color/light_black"
                                            android:textSize="@dimen/text_size_medium"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvPermanentAttachmentError"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center|left"
                                            android:gravity="center|left"
                                            android:paddingHorizontal="@dimen/_5sdp"
                                            android:paddingVertical="5dp"
                                            android:text="error"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/text_size_small"
                                            android:visibility="gone" />
                                    </LinearLayout>
                                </LinearLayout>


                                <include
                                    android:id="@+id/fFreedomFighterQuota"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/has_freedom_fighter_quota}" />

                                <LinearLayout
                                    android:id="@+id/llFreedomFighterAttachment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                  >

                                    <TextView
                                        android:id="@+id/tvFreedomFighterAttachment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="@dimen/_5sdp"
                                        android:drawableLeft="@drawable/ic_baseline_attachment_24"
                                        android:drawablePadding="20dp"
                                        android:text="@string/attachment"
                                        android:maxLines="2"
                                        android:ellipsize="end"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_size_large"
                                        android:textStyle="bold" />


                                    <TextView
                                        android:id="@+id/tvllFreedomFighterAttachmentFileName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="@dimen/_5sdp"
                                        android:ellipsize="end"
                                        android:paddingHorizontal="5dp"
                                        android:singleLine="true"
                                        android:text=""
                                        android:textColor="@color/light_black"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvFreedomFighterAttachmentError"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|left"
                                        android:gravity="center|left"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="5dp"
                                        android:text="error"
                                        android:textColor="@color/red"
                                        android:textSize="@dimen/text_size_small"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <include
                                    android:id="@+id/fDisability"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/has_disability}" />

                                <LinearLayout
                                    android:id="@+id/llDiasabiltyAttachment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintBottom_toTopOf="@id/send"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/llBody">

                                    <TextView
                                        android:id="@+id/tvAttachment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="@dimen/_5sdp"
                                        android:drawableLeft="@drawable/ic_baseline_attachment_24"
                                        android:drawablePadding="20dp"
                                        android:text="@string/attachment"
                                        android:maxLines="2"
                                        android:ellipsize="end"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_size_large"
                                        android:textStyle="bold" />


                                    <TextView
                                        android:id="@+id/tvllDiasabiltyAttachmentFileName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="@dimen/_5sdp"
                                        android:ellipsize="end"
                                        android:paddingHorizontal="5dp"
                                        android:singleLine="true"
                                        android:text=""
                                        android:textColor="@color/light_black"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvAttachmentError"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|left"
                                        android:gravity="center|left"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="5dp"
                                        android:text="error"
                                        android:textColor="@color/red"
                                        android:textSize="@dimen/text_size_small"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <include
                                    android:id="@+id/fDisabilityType"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/disability_type}" />

                                <include
                                    android:id="@+id/fDisabilityDegree"
                                    layout="@layout/personal_info_spinner"
                                    app:title="@{@string/disability_degree}" />

                                <include
                                    android:id="@+id/fDisabledPersonId"
                                    layout="@layout/personel_information_edittext"
                                    app:hint="@{@string/disabled_person_id}"
                                    app:title="@{@string/disabled_person_id}" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvImageTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:layout_weight="1"
                                            android:text="@string/photo"
                                            android:textColor="@color/light_black"
                                            android:textSize="@dimen/text_size_small"
                                            android:textStyle="bold" />

                                        <androidx.cardview.widget.CardView
                                            android:layout_width="@dimen/_110sdp"
                                            android:layout_height="@dimen/_110sdp"
                                            android:elevation="5dp"
                                            android:outlineSpotShadowColor="@color/gray"
                                            android:padding="5dp"
                                            app:cardCornerRadius="10dp">

                                            <ImageView
                                                android:id="@+id/ivEmployee"
                                                android:layout_width="@dimen/_100sdp"
                                                android:layout_height="@dimen/_100sdp"
                                                android:layout_gravity="center"
                                                android:layout_margin="10dp"
                                                android:src="@drawable/ic_baseline_image_24" />

                                        </androidx.cardview.widget.CardView>


                                    </LinearLayout>

                                    <LinearLayout

                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_weight="1">

                                        <include
                                            android:id="@+id/basicUpdate"
                                            layout="@layout/personal_info_update_button" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>

