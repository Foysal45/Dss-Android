<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="courseSchedule"
            type="com.dss.hrms.view.training.model.BudgetAndSchedule.CourseSchedule" />

        <variable
            name="language"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintRootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_shape_bg_white"
        android:padding="10dp"
        app:layoutDescription="@xml/model_course_schedule_layout_xml_constraintrootlayout_scene2">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/constraingRight"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@{((language.equals(`en`))?courseSchedule.course_schedule_title :courseSchedule.course_schedule_title_bn)}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tvCourseName"
            app:layout_constraintLeft_toLeftOf="@id/constraintMain"
            app:layout_constraintRight_toRightOf="@id/constraintMain"
            app:layout_constraintTop_toTopOf="@id/constraintMain" />
        <!--        (@string/course)+ `:`+-->


        <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@{((language.equals(`en`))?(@string/course)+`:`+courseSchedule.course.course_name:(@string/course)+`:`+courseSchedule.course.course_name_bn)}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/constraintMain"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/constraintMain"
            app:layout_constraintRight_toRightOf="@id/constraintMain"
            app:layout_constraintTop_toBottomOf="@id/tvName" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraingRight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/constraintMain"
            app:layout_constraintLeft_toRightOf="@id/constraintMain"
            app:layout_constraintRight_toRightOf="parent"></androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center|right"
            android:paddingHorizontal="5dp"
            app:layout_constraintRight_toLeftOf="@id/imgDelete"
            app:layout_constraintTop_toTopOf="@id/constraingRight"
            app:srcCompat="@drawable/edit_icon_24"
            app:tint="@color/green" />


        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:gravity="center|right"
            android:paddingHorizontal="5dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgEdit"
            app:layout_constraintTop_toTopOf="@id/imgEdit"
            app:srcCompat="@android:drawable/ic_menu_delete"
            app:tint="@color/gray" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintExpand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintMain"></androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tvCoordinator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@{((language.equals(`en`))?(@string/coordinator)+`:`+courseSchedule.coordinator.name:(@string/coordinator)+`:`+courseSchedule.coordinator.name_bn)}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/constraintExpand"
            app:layout_constraintRight_toRightOf="@id/constraintExpand"
            app:layout_constraintTop_toTopOf="@id/constraintExpand" />

        <TextView
            android:id="@+id/tvCourseCoordinator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@{((language.equals(`en`))?(@string/co_ordinator)+`:`+courseSchedule.co_coordinator.name:(@string/co_ordinator)+`:`+courseSchedule.co_coordinator.name_bn)}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/constraintExpand"
            app:layout_constraintRight_toRightOf="@id/constraintExpand"
            app:layout_constraintTop_toBottomOf="@id/tvCoordinator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>